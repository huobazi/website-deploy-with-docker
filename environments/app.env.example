# [Rails]
RAILS_SERVE_STATIC_FILES=false
RAILS_ENV=production
RAILS_LOG_TO_STDOUT=false

# [Database Config]
DATABASE_URL=postgres://postgres:@postgres:5432/xxx?pool=64
REDIS_URL=redis://redis:6379/1

# [Application Config]
# Configuration Document:
app_name=渔夫先生
modules=all
profile_fields=all
domain=example.com
https=false
asset_host=assets.example.cn
admin_emails=huobazi@gmail.com
google_analytics_key=UA-56321-7

# [Puma]
# application server config
# number of processes for Puma & Nginx
puma_workers=4
puma_min_threads=8
puma_max_threads=16

# [Sidekiq]
sidekiq_threads=20

# [Rack Limit]
rack_attack=false
rack_attack_limit=
rack_attack_period=

# [Email Server]
#mailer_provider=postmark
